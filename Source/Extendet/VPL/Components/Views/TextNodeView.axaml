<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="60" d:DesignHeight="60"
             x:Class="Slithin.VPL.Components.Views.TextNodeView"
             ClipToBounds="False">
    <Panel>
        <Panel.ContextFlyout>
            <Flyout>
                <DockPanel Width="200">
                    <Label Content="Text:" DockPanel.Dock="Top" />
                    <TextBox Text="{Binding Text}" DockPanel.Dock="Top" />

                    <Label Content="Name:" DockPanel.Dock="Top" />
                    <TextBox Text="{Binding Label}" DockPanel.Dock="Top" />
                </DockPanel>
            </Flyout>
        </Panel.ContextFlyout>

        <Rectangle Classes="node" />
        <TextBlock Text="{Binding Label}" TextAlignment="Center" VerticalAlignment="Center" />
    </Panel>
</UserControl>