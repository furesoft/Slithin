<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Slithin.Controls">
  <Design.PreviewWith>
    <controls:FileChooser />
  </Design.PreviewWith>

  <Style Selector="controls|FileChooser">
    <Setter Property="Template">
      <ControlTemplate>
        <Grid ColumnDefinitions="*,AUTO">
          <TextBox Text="{TemplateBinding ShortFilename}" Grid.Column="0" Watermark="{TemplateBinding Watermark}" />
          <Button Content="..." Classes="Flat" Command="{TemplateBinding BrowseCommand}" Margin="5,0,0,0" Grid.Column="1" />
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>