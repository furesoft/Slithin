<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:c="using:Slithin.Controls"
             x:Class="Slithin.UI.Modals.MessageBoxModal">
  <c:DialogControl Header="Information" CommandText="OK" IsCancelEnabled="True" Command="{Binding AcceptCommand}" MaxHeight="160" MinHeight="160" MaxWidth="150">
    <TextBlock Text="{Binding Message}" TextWrapping="Wrap" />
  </c:DialogControl>
</UserControl>