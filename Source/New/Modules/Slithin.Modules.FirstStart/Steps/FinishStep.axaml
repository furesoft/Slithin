<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:l="using:Slithin.Core"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Slithin.Modules.FirstStart.Steps.FinishStep">
    <Grid MinWidth="400" MinHeight="400">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Classes="card">
            <StackPanel Spacing="25" Margin="15">
                <TextBlock Classes="cardHeader" Text="{l:Localisation 'Finish'}" />

                <TextBlock TextWrapping="Wrap" Text="{l:Localisation 'Slithin is now configured and you can start enjoy managing your Remarkable device.'}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>