<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:Slithin.Controls"
             xmlns:controls1="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="100"
             x:Class="Slithin.Modules.Tools.UI.ToolsContextualMenu">
    <StackPanel Spacing="4" Orientation="Horizontal" HorizontalAlignment="Left" DockPanel.Dock="Left">

        <controls:ImagePopupButton MinHeight="60" Classes="Flat" Text="Filter"
                                   Image="{DynamicResource Material.FilterMenu}">
            <controls:ImagePopupButton.PopupContent>
                <controls1:Card>
                    <Grid RowDefinitions="*,AUTO" Margin="4">
                        <ComboBox ItemsSource="{Binding Filter.Categories, Mode=TwoWay}"
                                  SelectedItem="{Binding Filter.SelectedCategory}" MinWidth="175" />
                    </Grid>
                </controls1:Card>
            </controls:ImagePopupButton.PopupContent>
        </controls:ImagePopupButton>
    </StackPanel>
</UserControl>