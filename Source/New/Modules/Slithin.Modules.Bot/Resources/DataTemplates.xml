<DataTemplates xmlns="https://github.com/avaloniaui"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:messageModels="clr-namespace:Slithin.Modules.Bot.MessageModels">
    <DataTemplate DataType="{x:Type messageModels:HintMessageModel}">
        <StackPanel Spacing="5">
            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Width="135"/>

            <ItemsControl ItemsSource="{Binding Hints}" IsVisible="{Binding HintsVisible, Mode=TwoWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding}" CommandParameter="{Binding}" Command="{Binding $parent[ItemsPresenter].DataContext.Command}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="5" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </StackPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type messageModels:SimpleMessageModel}">
        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Width="135"/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type messageModels:ImageMessageModel}">
        <Image Source="{Binding Image}" Width="135" />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type messageModels:UnknownMessageModel}">
        <Grid Width="125" Height="75">
            <TextBlock Text="Sent" TextWrapping="Wrap" Width="135" Height="50" IsVisible="{Binding !IsVisible, Mode=TwoWay}" />
            
            <Button IsVisible="{Binding IsVisible, Mode=TwoWay}" Content="Suggest" Command="{Binding Command}" Width="120" Height="35" />
        </Grid>
    </DataTemplate>
</DataTemplates>
