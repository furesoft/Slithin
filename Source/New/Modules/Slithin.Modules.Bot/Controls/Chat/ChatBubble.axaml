<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:chat1="clr-namespace:Slithin.Modules.Bot.Controls.Chat">
    <Design.PreviewWith>
        <chat1:ChatBubble />
    </Design.PreviewWith>

    <Style Selector="chat1|ChatBubble">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Width="{TemplateBinding Width}" MaxWidth="{TemplateBinding MaxWidth}"
                        Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                    <ContentPresenter Margin="4" Content="{TemplateBinding Content}" Foreground="Black" />
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
